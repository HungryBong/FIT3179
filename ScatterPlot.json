{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Plastic waste generated by countries (2010)",
  "data": {
    "url": "https://raw.githubusercontent.com/HungryBong/FIT3179/main/Sheet%201-Plastic%20waste%20generation%20by%20country%20-%20OWID%20based%20on%20Jambeck%20et%20al.%20_%20World%20Bank.csv"
  },
  "selection": {
    "continent_highlight": {
      "type": "multi",
      "fields": ["Entity"],
      "bind": "legend"
    }
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "PlasticWaste",
      "type": "quantitative",
      "title": "Plastic Waste (tonnes)"
    },
    "y": {"field": "Population", "type": "quantitative"},
    "color": {"field": "Entity", "type": "nominal"},
    "size": {"field": "Population", "type": "quantitative"},
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "name"},
      {"field": "PlasticWaste", "type": "quantitative"},
      {"field": "Population", "type": "quantitative"}
    ]
  },
  "config": {}
}