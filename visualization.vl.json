{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Plastic waste generated by countries (2010)",
  "width": 800,
  "height": 800,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/HungryBong/FIT3179/main/bong_ne_110m.topo.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/HungryBong/FIT3179/main/Sheet%201-Plastic%20waste%20generation%20by%20country%20-%20OWID%20based%20on%20Jambeck%20et%20al.%20_%20World%20Bank.csv"
        },
        "key": "Entity",
        "fields": ["PlasticWaste", "Population"]
      }
    },
    {
      "calculate": "datum.PlasticWaste/datum.Population * 10000",
      "as": "Plastic waste per 10,000 population"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Plastic waste per 10,000 population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [50, 100, 100, 200, 1000, 2000],
        "range": [
          "#eff3ff",
          "#c6dbef",
          "#9ecae1",
          "#6baed6",
          "#3182bd",
          "#08519c"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "name"},
      {"field": "PlasticWaste", "type": "quantitative"},
      {"field": "Population", "type": "quantitative"},
      {
        "field": "Plastic waste per 10,000 population",
        "type": "quantitative",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}